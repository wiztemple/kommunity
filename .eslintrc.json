{   "root": true,
    "extends": "airbnb-base",
    "env": {
        "node": true,
        "es6": true,
        "mocha": true,
        "browser": true,
        "commonjs": true
    },
    "rules": {
        "max-len": ["error", {
            "code": 200,
            "ignoreStrings": true
        }],
        "consistent-return": 0,
        "comma-dangle": 0,
        "no-param-reassign": 0,
        "import/no-extraneous-dependencies": ["error", {"devDependencies": true }]
    }
}